<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>

{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{id}}">{{title}}</a></td>
            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <!--Tai sao phai span? Vi muon viet hoa chu dau cua 'public' nhung chang le lai 
                                                                viet han function trong helpers/hbs.js. Nen de span nhu vay roi vao style.css
                                                                chinh mot ti la duoc-->
            <td>
                <a href="/stories/edit/{{id}}" class="btn left-align">
                    <i class="fas fa-pen"></i> Edit
                </a>
                <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="POST">
                    <!--id="delete-form" de bo vao trong cung 1 dong, xem style.css-->
                    <!--Optional<input type="hidden" name="_method" value="PUT">-->
                    <button type="submit" class="btn red "><i class="fas fa-trash-alt"></i> Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}